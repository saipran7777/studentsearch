<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#77c0cbec">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/student_photo"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/curry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/student_photo"
            android:layout_toRightOf="@id/student_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="2dp"
                android:text="Steph Curry"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/student_roll_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:drawablePadding="2dp"
                android:text="BB15B123"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/student_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="2dp"
                android:text="steph@hotmail.com"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/student_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="2dp"
                android:text="Narmada, 268"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>